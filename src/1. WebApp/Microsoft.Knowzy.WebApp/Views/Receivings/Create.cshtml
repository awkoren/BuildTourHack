@using Microsoft.Knowzy.Domain
@model Microsoft.Knowzy.Models.ViewModels.ReceivingViewModel
@{
    ViewData["Title"] = "Create Receiving";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="details-close glyphicon glyphicon-remove hidden-xs" onclick="location.href = '@(Url.Action("Index", ViewContext.RouteData.Values["controller"].ToString()))'"></div>
<form asp-action="Create" novalidate>
    <div class="row">
        <div class="col-xs-12 col-sm-6">
            <div class="row">
                <div class="col-xs-12">
                    <dl class="dl-horizontal detail-item detail-item-status create-item-status">
                        <dt>@Html.DisplayNameFor(model => model.Status)</dt>
                        <dd>@Html.DropDownListFor(model=> model.Status, Html.GetEnumSelectList<OrderStatus>(), " --- ", new {@class = "form-control form-input" })</dd>
                    </dl>
                </div>
            </div>
            <div class="row">
                <table class="table table-striped table-responsive items-grid">
                    <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.OrderLines[0].ProductImage)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OrderLines[0].ProductId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OrderLines[0].Quantity)
                        </th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    @{
                        for (var i=0; i < Model.OrderLines.Count; i++)
                        {
                            @Html.EditorFor(model => Model.OrderLines[i])
                        }
                    }
                    </tbody>
                </table>
            </div>
            <div class="row">
                <span id="addItem" class="add-item">Add new Item</span>
            </div>
        </div>
        <div class="col-xs-12 col-sm-6 details-right">
            <dl class="dl-horizontal detail-item">
                <dt><label asp-for="CompanyName"></label></dt>
                <dd>
                    <input asp-for="CompanyName" class="form-control form-input" maxlength="40"/>
                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                </dd>
                <dt><label asp-for="ContactPerson"></label></dt>
                <dd>
                    <input asp-for="ContactPerson" class="form-control form-input" maxlength="40"/>
                    <span asp-validation-for="ContactPerson" class="text-danger"></span>
                </dd>
                <dt><label asp-for="Email"></label></dt>
                <dd>
                    <input type="email" asp-for="Email" class="form-control form-input" maxlength="40"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </dd>   
                <dt><label asp-for="PhoneNumber"></label></dt>
                <dd>
                    <input asp-for="PhoneNumber" type="number" oninput="this.value=this.value.slice(0, this.maxLength)" maxlength="10" class="form-control form-input" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </dd>           
                <dt><label asp-for="Address"></label></dt>
                <dd>
                    <input asp-for="Address" class="form-control form-input" maxlength="80"/>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </dd>           
                <dt><label asp-for="Tracking"></label></dt>
                <dd>
                    <input asp-for="Tracking" class="form-control form-input" maxlength="15"/>
                    <span asp-validation-for="Tracking" class="text-danger"></span>
                </dd>           
                <dt><label asp-for="PostalCarrierName"></label></dt>
                <dd>@Html.DropDownListFor(model => model.PostalCarrierId, new SelectList(ViewBag.PostalCarrier, "Id", "Name"), " --- ", new { @class = "form-control form-input" })</dd>           
            </dl>
        </div>
    </div>
    <div class="row">
        <button type="submit" class="center-block btn btn-default button-default button-action">
            <span class="glyphicon glyphicon-floppy-disk"></span><span>Save changes</span>
        </button>
    </div>
</form>