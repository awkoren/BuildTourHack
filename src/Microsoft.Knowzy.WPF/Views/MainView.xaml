<UserControl x:Class="Microsoft.Knowzy.WPF.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:localization="clr-namespace:Microsoft.Knowzy.WPF.Localization"
             mc:Ignorable="d" HorizontalContentAlignment="Stretch"
        d:DesignHeight="200" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" IsMainMenu="True" DockPanel.Dock="Top" HorizontalAlignment="Stretch"
              Style="{DynamicResource MenuStyle}" ItemContainerStyle="{DynamicResource MenuItemStyle}" >
            <MenuItem Header="{x:Static localization:Resources.File_Menu}"/>
            <MenuItem Header="{x:Static localization:Resources.Menu_Menu}"/>
            <MenuItem Header="{x:Static localization:Resources.View_Menu}"/>
            <MenuItem Header="{x:Static localization:Resources.Help_Menu}"/>
            <MenuItem Header="{x:Static localization:Resources.Login_Menu}"/>
        </Menu>

        <TabControl Grid.Row="1"  ItemContainerStyle="{DynamicResource TabItemStyle}" Style="{DynamicResource TabControlStyle}">
            <TabItem HeaderTemplate="{StaticResource HamburgerDataTemplate}">
                <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition x:Name="Column0"/>
                        <ColumnDefinition x:Name="Column1"/>
                        <ColumnDefinition x:Name="Column2"/>
                        <ColumnDefinition x:Name="Column3"/>
                        <ColumnDefinition x:Name="Column4"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Column="0" Style="{StaticResource HeaderFirstListItemsStyle}">
                        <Button Style="{DynamicResource SortItemButtonStyle}"/>
                    </Border>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="{x:Static localization:Resources.ItemNo_Header}" Style="{StaticResource TitleTextBlockStyle}"/>
                    <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource HeaderListItemsStyle}">
                        <Button Style="{DynamicResource SortItemButtonStyle}"/>
                    </Border>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{x:Static localization:Resources.Engineer_Header}"  Style="{StaticResource TitleTextBlockStyle}"/>
                    <Border Grid.Row="0" Grid.Column="2" Style="{StaticResource HeaderListItemsStyle}">
                        <Button Style="{DynamicResource SortItemButtonStyle}"/>
                    </Border>
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="{x:Static localization:Resources.NewProduct_Header}" Style="{StaticResource TitleTextBlockStyle}"/>
                    <Border Grid.Row="0" Grid.Column="3" Style="{StaticResource HeaderListItemsStyle}">
                        <Button Style="{DynamicResource SortItemButtonStyle}"/>
                    </Border>
                    <TextBlock Grid.Row="0" Grid.Column="3" Text="{x:Static localization:Resources.RowMaterial_Header}" Style="{StaticResource TitleTextBlockStyle}"/>
                    <Border Grid.Row="0" Grid.Column="4" Style="{StaticResource HeaderListItemsStyle}" Margin="0,0,1,0">
                        <Button Style="{DynamicResource SortItemButtonStyle}"/>
                    </Border>
                    <TextBlock Grid.Row="0" Grid.Column="4" Text="{x:Static localization:Resources.Status_Header}" Style="{StaticResource TitleTextBlockStyle}"/>

                    <ListBox Grid.ColumnSpan="5" Grid.Row="1" HorizontalContentAlignment="Stretch" Background="Transparent" BorderThickness="0" Margin="0"
                             ItemContainerStyle="{StaticResource ListViewStyle}" 
                             ItemsSource="{Binding DevelopmentItems}" 
                             SelectedItem="{Binding SelectedDevelopmentItem}"/>
                </Grid>
            </TabItem>
            <TabItem HeaderTemplate="{StaticResource GridDataTemplate}"/>
        </TabControl>

        <Button Grid.Row="1" Height="30" x:Name="EditItem" Content="Edit"></Button>
    </Grid>

</UserControl>

